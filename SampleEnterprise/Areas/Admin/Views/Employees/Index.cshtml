@using SampleEnterprise.Models.EntityModel
@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee";
	string title = ViewBag.Title;
    string subtitle = ViewBag.Title;
	string controller = (string)ViewBag.controller;
    string viewName = "Index";
    string editLinkName = "";
	/*
	bool noItemsExist = Model == null;
	if (!noItemsExist) {
		noItemsExist = Model.Count() == 0;
	}
	*/
}

<h2 class="h3 gap-from-top-small">
	<span class="glyphicon glyphicon-th-list"></span> 
	@Html.SamePageLink(title, subtitle, false)
</h2>
<div class="small-bottom-gap"></div>

<p class="create-btn-p">
    <a href="@Url.Action("Create")" title="Create a new item." class="btn btn-warning create-save"><span class="glyphicon glyphicon-plus"></span> Create</a>
</p>
<table class="table table-hover bootstrap-table-do" data-toggle="table" data-toolbar="#filter-bar" data-show-filter="true" data-show-columns="true" data-search="true" data-show-refresh="true" data-show-toggle="true" data-show-export="true" data-pagination="true">
	<!--<caption>@viewName</caption>-->
	<thead>
		<tr>		
			<th data-field="EmpoyeeName">
				@Html.DisplayNameFor(model => model.EmpoyeeName)
			</th>
			<th data-field="Address">
				@Html.DisplayNameFor(model => model.Address)
			</th>
			<th data-field="Email">
				@Html.DisplayNameFor(model => model.Email)
			</th>
			<th data-field="DateOfBirth">
				@Html.DisplayNameFor(model => model.DateOfBirth)
			</th>
			<th data-field="EmployeeCategory.CategoryName">
				@Html.DisplayNameFor(model => model.EmployeeCategory.CategoryName)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model) {
			<tr>
		
				<td>
					@{editLinkName = Html.DisplayFor(model => item.EmpoyeeName).ToString();}
					<a href="@Url.Action("Edit", new { id=item.EmployeeID })" title="@editLinkName edit..."><span class="glyphicon glyphicon-pencil"></span> @editLinkName</a>
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Address)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DateOfBirth)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.EmployeeCategory.CategoryName)
				</td>
				<td>			
					<a href="@Url.Action("Details", new { id=item.EmployeeID })" title="Details of @editLinkName." class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-print"></span> Details</a>
					<a href="@Url.Action("Delete", new { id=item.EmployeeID })" title="Delete @editLinkName" class="btn btn-danger btn-xs" onclick="return confirm('Are you sure?')"><span class="glyphicon glyphicon-remove"></span> Delete</a>            
				</td>
			</tr>
		}
	</tbody>

</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
